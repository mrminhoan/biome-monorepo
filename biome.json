{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "overrides": [
    {
      "formatter": {
        "indentStyle": "tab"
      }
    },
    {
      "javascript": {
        "formatter": {
          "quoteStyle": "single",
          "jsxQuoteStyle": "single"
        }
      }
    },
    {
      "include": ["src/**"],
      "linter": {
        "rules": {
          "a11y": {
            "useButtonType": "off"
          }
        }
      }
    }
  ]
}
